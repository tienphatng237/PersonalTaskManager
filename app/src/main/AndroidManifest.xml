<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalTaskManager"
        tools:targetApi="31">

        <!-- ========================================================= -->
        <!--  MAIN ENTRY — MainActivity = nơi check login              -->
        <!-- ========================================================= -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">

            <!-- Only one LAUNCHER allowed -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <!-- ========================================================= -->
        <!--  AUTHENTICATION MODULE                                    -->
        <!-- ========================================================= -->
        <activity
            android:name=".features.authentication.screens.AuthSplashActivity"
            android:exported="true"/>

        <activity
            android:name=".features.authentication.screens.LoginActivity"
            android:exported="true"/>

        <activity
            android:name=".features.authentication.screens.RegisterActivity"
            android:exported="true"/>

        <activity
            android:name=".features.authentication.screens.ForgotPasswordActivity"
            android:exported="true"/>


        <!-- ========================================================= -->
        <!--  NAVIGATION + TASK MANAGER MODULE                         -->
        <!-- ========================================================= -->
        <activity
            android:name=".features.navigation.NavigationActivity"
            android:exported="true"
            android:theme="@style/Theme.PersonalTaskManager"/>

        <activity
            android:name=".features.task_manager.screens.TaskManagerMainActivity"
            android:exported="false"
            android:theme="@style/Theme.TaskManager"/>

        <activity
            android:name=".features.task_manager.screens.TaskListActivity"
            android:exported="false"
            android:theme="@style/Theme.TaskManager"/>

        <activity
            android:name=".features.task_manager.screens.TaskDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.TaskManager"/>

        <!-- WORKSPACE ACTIVITY (bắt buộc phải có) -->
        <activity
            android:name=".features.task_manager.screens.workspace.TaskWorkspaceActivity"
            android:exported="false"
            android:theme="@style/Theme.TaskManager"/>


        <!-- ========================================================= -->
        <!--  CALENDAR EVENTS MODULE                                   -->
        <!-- ========================================================= -->
        <activity
            android:name=".features.calendar_events.screens.CalendarMonthActivity"
            android:exported="false"/>

    </application>

</manifest>
